{% extends 'base.html.twig' %}

{% block title %}Historique index{% endblock %}

{% block body %}
    <h1>Historique index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Message</th>
                <th>Ticket</th>
                <th>Reponse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for historique in historiques %}
            <tr>
                <td>{{ historique.id }}</td>
                <td>{{ historique.numero }}</td>
                <td>{{ historique.message }}</td>
                <td>{{ historique.ticket }}</td>
                <td>{{ historique.reponse }}</td>
                <td>
                    <a href="{{ path('app_historique_show', {'id': historique.id}) }}">show</a>
                    <a href="{{ path('app_historique_edit', {'id': historique.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_historique_new') }}">Create new</a>
{% endblock %}
