{% extends 'base.html.twig' %}

{% block title %}Liste des Groupes{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-gradient-dark">
                        <h3>Liste des Groupes de contacts</h3>
                    </div>
                    <div class="card-body">
                        <table class="table datatable">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Designation</th>
                                <th>Total Contact</th>
                                <th>Organisation</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set counter = 0 %}
                            {% for groupe in groupes %}
                                {% set counter = counter + 1 %}
                                <tr>
                                    <td>{{ counter }}</td>
                                    <td>{{ groupe.designation }}</td>
                                    <td>{{ groupe.totalContact }}</td>
                                    <td>{{ groupe.organisation }}</td>
                                    <td>
                                        <a href="{{ path('app_groupe_show', {'id': groupe.id}) }}" class="btn btn-sm btn-default">Details</a>
                                        <a href="{{ path('app_groupe_edit', {'id': groupe.id}) }}" class="btn btn-sm btn-default">Editer</a>
                                        <a href="{{ path('app_groupe_attribuer', {'id': groupe.id}) }}" class="btn btn-sm btn-default">Gerer</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary btn" href="{{ path('app_groupe_new') }}">Create new</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
