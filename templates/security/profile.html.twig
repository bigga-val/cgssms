{% extends 'base.html.twig' %}

{% block title %}Profil Utilisateur{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row pt-2">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="card">
                    <div class="card-header bg-gradient-dark d-flex">
                        <h3>Profil Utilisateur</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tr>
                                <td>Username : </td>
                                <td>{{ app.user.username }}</td>

                            </tr>
                            <tr>
                                <td>Telephone : </td>
                                <td>{{ app.user.telephone }}</td>
                            </tr>
                            <tr>
                                <td>Email : </td>
                                <td>{{ app.user.email }}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path("edit_profile") }}" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
{% endblock %}