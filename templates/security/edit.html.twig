{% extends 'base.html.twig' %}

{% block title %}Profil Utilisateur{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row pt-2">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="card">
                    <div class="card-header bg-black d-flex">
                        <h3>Modifier le Profil Utilisateur</h3>
                    </div>
                    <div class="card-body">
                        <form action="" method="POST">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input name="username" type="text" class="form-control" value="{{ app.user.username }}">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="hidden" name="profile_token" value="{{ csrf_token('profile') }}">

                                <input name="email" type="text" class="form-control" value="{{ app.user.email }}">
                            </div>
                            <div class="form-group">
                                <label for="telephone">Telephone</label>

                                <input name="telephone" type="text" class="form-control" value="{{ app.user.telephone }}">
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-success" value="Enregistrer">

                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path("app_profile") }}" class="">Retour au profil</a>

                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
{% endblock %}