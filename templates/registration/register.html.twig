{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">

            <div class="card my-5">
                <div class="card-header bg-info">
                    <h4>Creer un compte</h4>
                </div>
                <div class="card-body">
                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}

                        <div class="form-group">
                            <label for="">Nom d'Utilisateur *</label>
                            {{ form_widget(registrationForm.username, {'attr': {'class':'form-control'}}) }}
                        </div>
                    <div class="form-group">
                        <label for="">Email *</label>
                        {{ form_widget(registrationForm.Email, {'attr': {'class':'form-control', 'required':'true'}}) }}

                    </div>

                    <div class="form-group">
                        <label for="">Mot de Passe</label>
                        {{ form_widget(registrationForm.plainPassword,{'attr':{'class':'form-control'}}) }}
                    </div>
{#                        {{ form_row(registrationForm.username, {'label': 'Nom d\'Utilisateur'}) }}#}
                    <div class="form-group">
                        <label for="">Confirmer le Mot de Passe *</label>
                        {{ form_widget(registrationForm.plainPassword2,{'attr':{'class':'form-control'}}) }}

                    </div>

{#                        {{ form_row(registrationForm.agreeTerms) }}#}

                        <button type="submit" class="btn btn-info">Register</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>


        </div>
        <div class="col-4"></div>

    </div>
</div>
{% endblock %}
