{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 col-12">
            <!-- small box -->
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>{{ app.user.totalSMS }}</h3>

                    <p>SMS</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-12">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>{{ app.user.usedSMS }}<sup style="font-size: 20px"></sup></h3>

                    <p>SMS Utilises</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-12">
            <!-- small box -->
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>{{ contacts }}</h3>

                    <p>Numeros</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="{{ path("app_contact_index") }}" class="small-box-footer">Details<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-12">
            <!-- small box -->
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>{{ groupes }}</h3>

                    <p>Groupes de Contacts</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="{{ path("app_groupe_index") }}" class="small-box-footer">Details <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
    </div>
    <div class="row">
        <div class="col-lg-8 col-12">
            <div class="card">
                <div class="card-header bg-info">
                    <h5>Acces directs</h5>
                </div>
                <div class="card-body d-flex text-center">
                    <div class="card card-body mx-2">
                        <a href="{{ path("app_envoi_sms") }}">ENVOI SMS</a>

                    </div>
                    <div class="card card-body mx-2 ">
                        <a href="">ENVOI EMAIL</a>
                    </div>
                    <div class="card card-body mx-2">
                        <a href="{{ path("app_groupe_index") }}">CONTACTS</a>
                    </div>
                    <div class="card card-body mx-2">
                        <a href="">
                            ACHAT DES SMS
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-12">
            <div class="card">
                <div class="card-header bg-info">
                    <h5>Envoi SMS rapide</h5>
                </div>
                <div class="card-body">
                    <form action="{{ path("app_envoi_sms") }}">
                        <input type="text" name="numero" class="form-control" placeholder="Num: 0991234567">
                        <br>
                        <textarea name="message" id="" cols="30" rows="" class="form-control" placeholder="Ecrivez le message ici..."></textarea>
                        <br>
                        <input id="btn-envoyer" type="submit" class="btn btn-info " value="Envoyer">
                    </form> 
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-12">
            <div class="card">
                <div class="card-header bg-gradient-info">
                    <h5>Vos derniers envois</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <td>Date</td>
                            <td>Numero</td>
                            <td>Message</td>
                            <td>Resultat</td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for historique in historiques %}
                        <tr>
                            <td>{{ historique.date | date("d/m/Y H:m:s") }}</td>
                            <td>{{ historique.numero | replace({'%2b': '+'}) }}</td>
                            <td>{{ historique.message | replace({'+': ' '}) }}</td>
                            <td>{{ historique.reponse }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-12">
            <div class="card">
                <div class="card-header bg-gradient-info">
                    <h5>Definir la periode souhaitee</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Date:</label>
                                <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                    <input type="text" class="form-control datetimepicker-input" data-target="#reservationdate"/>
                                    <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row"></div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- date-range-picker -->
    <script src="{{ asset("plugins/daterangepicker/daterangepicker.js") }}"></script>
    <script src="{{ asset("plugins/jquery/jquery.js") }}"></script>
    <script>
        $('#reservation').daterangepicker()
    </script>
{% endblock %}
