{% extends 'base.html.twig' %}

{% block title %}Accueil In-SMS{% endblock %}

{% block body %}


    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header bg-gradient-dark">
                        <h3>Commande des SMS</h3>
                    </div>
                    <div class="card-body">
                        <form action="{{ path("app_confirmer") }}">
                            <div class="form-group">
                                <label for="prix">Prix ($)</label>
                                <input readonly value="0.06" type="text" class="form-control" id="prix" name="prix">
                            </div>
                            <div class="form-group">
                                <label for="quantite">Montant ($)</label>
                                <input type="number" name="montant" id="montant" placeholder="Entrez le montant ..." class="form-control">
                            </div>
                            <div class="form-group">
                                <h6>
                                    Quantite :
                                    <span id="net-total">0</span>
                                     SMS
                                </h6>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success">Commander</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="{{ asset("plugins/jquery/jquery.js") }}"></script>

    <script>
        $(document).ready(function(e){
            let montant = $("#montant")
            let prix = $("#prix")
            montant.on("keyup", function(e){
                if($(this).val() !== ""){
                    let total = parseInt(montant.val()) / parseFloat(prix.val())
                    $("#net-total").text(parseInt(total))
                }else{
                    $("#net-total").text(0)
                }

            })
        })
    </script>
{% endblock %}