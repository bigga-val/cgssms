{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="card">
                <div class="card-header">

                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ contact.id }}</td>
                        </tr>
                        <tr>
                            <th>Telephone</th>
                            <td>{{ contact.telephone }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ contact.nom }}</td>
                        </tr>
                        <tr>
                            <th>Postnom</th>
                            <td>{{ contact.postnom }}</td>
                        </tr>
                        <tr>
                            <th>Adresse</th>
                            <td>{{ contact.adresse }}</td>
                        </tr>
                        <tr>
                            <th>Fonction</th>
                            <td>{{ contact.fonction }}</td>
                        </tr>
                        <tr>
                            <th>IsActive</th>
                            <td>{{ contact.isActive ? 'Yes' : 'No' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="footer">
                    <a href="{{ path('app_contact_index') }}">back to list</a>

                    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>

                    {{ include('contact/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>




{% endblock %}
